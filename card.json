{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${KpiName}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "${KpiIcon}",
                            "size": "Small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${KpiValue}",
                            "wrap": true,
                            "horizontalAlignment": "Right"
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "Date ${KpiDate}",
                            "isSubtle": true,
                            "wrap": true,
                            "horizontalAlignment": "Right"
                        }
                    ],
                    "width": "Auto"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}
